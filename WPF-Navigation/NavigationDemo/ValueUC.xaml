<UserControl x:Class="NavigationDemo.ValueUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NavigationDemo"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnPlus" 
                    Width="100" Height="60"                     
                    Click="btnPlus_Click">+10</Button>
            <Button x:Name="btnMinus" 
                    Width="100" Height="60" 
                    Click="btnMinus_Click">-10</Button>           
        </StackPanel>
        <TextBox x:Name="textBoxValue" 
                 Width="200" Height="40"
                 HorizontalAlignment="Left"
                 Margin="0,10,0,0"
                 FontSize="20"
                 Text="10" TextChanged="textBoxValue_TextChanged"></TextBox>

    </StackPanel>
</UserControl>
