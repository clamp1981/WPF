<UserControl x:Class="inStaDemo.UserControls.PostOperationsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:inStaDemo.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="550">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Image x:Name="imageLike"  
                   Margin="8"
                   Source="/icons/like.png"
                   Stretch="Uniform" MouseDown="imageLike_MouseDown" />
            <Image  Source="/icons/comment.png"
                    Margin="8"
                    Stretch="Uniform" />
            <Image  Source="/icons/Send.png"
                    Margin="8"
                    Stretch="Uniform" />
        </StackPanel>
        <Image  Source="/icons/bookmark.png"
                HorizontalAlignment="Right"
                Margin="8"
                Stretch="Uniform" />
    </Grid>
    
</UserControl>
