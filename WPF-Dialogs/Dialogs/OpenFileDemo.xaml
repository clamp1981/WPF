<Window x:Class="Dialogs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dialogs"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnOpenFile" Grid.Row="0"  Click="Button_Click"> Open File </Button>
        <Button x:Name="btnSaveFile" Grid.Row="1" Click="btnSaveFile_Click" >Save File</Button>
        <RichTextBox Grid.Row="2" x:Name="richTextBox"></RichTextBox>
    </Grid>
</Window>
