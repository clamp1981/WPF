<Window x:Class="MenuDemo.StatusBarDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenuDemo"
        mc:Ignorable="d"
        Title="StatusBarDemo" Height="300" Width="400">
    <DockPanel LastChildFill="False">
        <Button DockPanel.Dock="Top" Click="Button_Click">
            Increase by 10
        </Button>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem x:Name="status">
                Loading...
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <ProgressBar x:Name="progressBar" Width="100" Height="15" Value="10"></ProgressBar>
            </StatusBarItem>
        </StatusBar>
        
    </DockPanel>
</Window>
