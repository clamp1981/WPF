<Window x:Class="GridDemo.CanvasDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GridDemo"
        mc:Ignorable="d"
        Title="CanvasDemo" Height="400" Width="400">
    <Grid>
        <Canvas>
            <Button Canvas.Left="5">button 01</Button>
            <Button Canvas.Right="5">button 02</Button>
            <Rectangle Width="100" Height="100" Fill="Bisque" Canvas.Bottom="0" Canvas.Left="5"/>
            <Rectangle Panel.ZIndex="1" Width="100" Height="100" Fill="Aqua" Canvas.Bottom="10" Canvas.Right="5"/>
            <Rectangle Width="100" Height="100" Fill="BlueViolet" Canvas.Bottom="80" Canvas.Right="50"/>

        </Canvas>
        
    </Grid>
</Window>
