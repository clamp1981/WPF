<Window x:Class="MSAppStoreClone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MSAppStoreClone"
        xmlns:page="clr-namespace:MSAppStoreClone.Pages"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <TabControl Margin="5">
            <TabItem Header="Home" x:Name="HomeTab">
                <Frame x:Name="MainHomeFrame">
                   
                </Frame>
            </TabItem>
            <TabItem Header="Apps" x:Name="AppsTab">
                <Frame x:Name="MainAppFrame">

                </Frame>
            </TabItem>
            <TabItem Header="Game" x:Name="GameTab">
                <Frame x:Name="MainGameFrame">

                </Frame>
            </TabItem>
        </TabControl>
        
        

    </Grid>
</Window>
