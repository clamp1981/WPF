<Window x:Class="MSAppStoreClone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MSAppStoreClone"
        xmlns:uc="clr-namespace:MSAppStoreClone.UserControls"
        xmlns:page="clr-namespace:MSAppStoreClone.Pages"
        mc:Ignorable="d"
        Title="My MicroSoft Store" Height="450" Width="800" >
    <Grid Background="#FFF3F3F3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.01*"/>
            <RowDefinition Height="0.98*"/>
            <RowDefinition Height="0.01*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="1" Grid.Row="1" >
            <StackPanel x:Name="MainMenuStackPanel_Top" Orientation="Vertical" VerticalAlignment="Top"/>
            <StackPanel x:Name="MainMenuStackPanel_Bottom" Orientation="Vertical" VerticalAlignment="Bottom"/>
        </Grid>
        
        <Grid Grid.Column="2" Grid.Row="1">
            <Frame  x:Name="MainPageFram" 
                    NavigationUIVisibility="Hidden"/>

        </Grid>

    </Grid>
</Window>
