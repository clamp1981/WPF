<UserControl x:Class="MSAppStoreClone.UserControls.AppsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MSAppStoreClone.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="800" SizeChanged="UserControl_SizeChanged" Loaded="UserControl_Loaded">
    <Grid Background="White" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.9*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="10,5,0,0">
                <TextBlock 
                   x:Name="AppsTitle"
                   FontSize="16"                   
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Text="{Binding Title}"/>
            </Grid>
            <Grid Grid.Row="1" Margin="10,5,0,0">
                <StackPanel x:Name="MainStackPanel" Orientation="Horizontal"/>
            </Grid>

        </Grid>
    </Grid>
</UserControl>
